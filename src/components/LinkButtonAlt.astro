---
const { href } = Astro.props
---

<a 
    href={href}
    target="_blank"
    role="link" 
    class="hbtn hb-fill-middle2-bg inline-flex items-center justify-center gap-2 px-3 py-2 space-x-2 text-base text-cyan-200 transition border border-cyan-200 focus-visible:ring-yellow-500/80 text-md hover:border-slate-400 group max-w-fit rounded-xl hover:text-slate-400 focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black">
<slot />
</a>

<style>
    .hbtn {
      position: relative;
      box-sizing: border-box;
      overflow: hidden;
      padding: 8px 20px;
      margin: 0px 3px 6px;
      text-align: center;
      text-decoration: none;
      white-space: nowrap;
      z-index: 0;
}
 

.hb-fill-middle2-bg::before {
      position: absolute;
      content: "";
      background: #e2e8f0;
      transition-duration: 0.3s;
      z-index: -1;
      inset: 0px 0px auto auto;
      width: 0px;
      height: 100%;
      opacity: 1;
} 
 

.hb-fill-middle2-bg:hover::before {
      width: 50%;
      height: 100%;
      opacity: 1;
} 
 

.hb-fill-middle2-bg {
      background: transparent;
      transition: all 0.3s ease 0s;
} 
 

.hb-fill-middle2-bg:hover {
      color: rgb(0, 0, 0);
      background: #e2e8f0;
      transition: all 0.3s ease 0s;
} 
 

.hb-fill-middle2-bg::after {
      position: absolute;
      content: "";
      background: #e2e8f0;
      transition-duration: 0.3s;
      z-index: -1;
      inset: 0px auto auto 0px;
      width: 0px;
      height: 100%;
      opacity: 1;
} 
 

.hb-fill-middle2-bg:hover::after {
      width: 50%;
} 
</style>