---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
---

<Layout
  title="Jaime Canovas - Developer and designer"
  description="Hire Jaime to create your web or mobile application. Web Developer specialized in creating unique applications."
>
  <main class="px-4">
    <SectionContainer class="pb-36 pt-36 md-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">
      <SectionContainer id="about-me">
        <h2
          class="flex items-center mb-6 text-xl font-semibold gap-x-3 text-slate-100"
        >
          <ProfileCheck class="size-8" />
          <span class="whitespace-nowrap">About me</span>
        </h2>
        <AboutMe />
      </SectionContainer>
    <SectionContainer id="experience">
      <h2
        class="flex items-center mb-6 text-xl font-semibold gap-x-3 text-slate-100"
      >
        <Briefcase class="size-8" />
        <span class="whitespace-nowrap">Experience</span>
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects">
      <h2
        class="flex items-center mb-6 text-xl font-semibold gap-x-3 text-slate-100"
      >
        <CodeIcon class="size-7" />
        <span class="whitespace-nowrap">Projects</span>
      </h2>
      <Projects />
    </SectionContainer>
  </div>
  </main>
</Layout>

<style>
  h2::after {
    content: "";
    display: block;
    position: relative;
    width: min(100%, 300px);
    height: 1px;
    margin-left: 15px;
    background-color: #a5f3fc;
    opacity: 0.1;
  }
</style>